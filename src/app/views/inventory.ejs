<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">Inventario</a>
    </nav>
    <!-- <%=inventario%> -->

    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Item</th>
                        <th>Cantidad</th>
                    </tr>
                    <% for (let i = 0; i < inventario.length; i++) { %>
                        <tr>
                            <td><%= inventario[i].id_elem %></td>
                            <td><%= inventario[i].title %></td>
                            <td><%= inventario[i].elemento %></td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>

        <div class="col-md-5 mt-4 card">
            <form action="inventory" method="POST" class="card-body">
                <h3 class="card-title">Agregar Items</h3>
                <div class="form-group">
                    <input type="text" name="item" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="elemento" class="form-control">
                </div>
                <input type="submit" class="btn btn-secondary">
            </form>
        </div>
    </div>
   
</body>
</html>